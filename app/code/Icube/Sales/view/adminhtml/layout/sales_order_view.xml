<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="order_items">
            <block class="Magento\Sales\Block\Adminhtml\Items\Column\DefaultColumn" name="column_sw-shipping-information" template="Swiftoms_OmsConnect::items/column/shippinginformation.phtml" group="column"/>
           <block class="Magento\Sales\Block\Adminhtml\Items\Column\DefaultColumn" name="column_sw-location" template="Swiftoms_OmsConnect::items/column/location.phtml" group="column"/>
        </referenceBlock>

        <referenceContainer name="order_tab_info">
            <block class="Swiftoms\OmsConnect\Block\Adminhtml\Sales\Order\View\Info" name="order_info" template="Icube_Sales::sales/order/view/info.phtml">
                <container name="extra_customer_info"/>
            </block>
        </referenceContainer>
		
		<referenceBlock name="order_shipping_view">
			<action method="setTemplate">
		        <argument name="template" xsi:type="string">Swiftoms_OmsConnect::sales/order/shipping.phtml</argument>
		    </action>
        </referenceBlock>
	</body>
</page>